
<section>
  <article>
    <header>
      <h1>Edit Blog Entry:</h1>
    </header>
    <div class='post'>
      <form action='/edit_post' method='post'>
        <p>ID:<input type='text' name='id' value='<%= @blog_post.id %>'</p>
        <p>Title:<input type='text' name='title' value='<%= @blog_post.title %>'</p>
        <textarea name='body' rows = '8' cols = '30'><%= @blog_post.body %></textarea>
        <input type='submit'>
      </form>
    </div>
  </article>
</section>






